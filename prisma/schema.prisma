datasource db {
  url      = env("DATABASE_URL")
  directUrl= env("DATABASE_DIRECT_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id            Int         @id @default(autoincrement())
  name          String
  description   String?
  cmdb_link   String?
  price         Float
  renewalDate   DateTime
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  productType   ProductType @relation(fields: [productTypeId], references: [id])
  productTypeId Int
  replacedById  Int?
}

model ProductType {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  icon        String?
  Product     Product[]
}

model Supplier {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
